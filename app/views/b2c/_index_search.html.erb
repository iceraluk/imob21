<section class="advance-search ">
  <h3 class="search-heading"><i class="icon-search"></i>Cauta</h3>
  <div class="as-form-wrap">
    <form class="advance-search-form clearfix" action="" method="get">

      <div class="option-bar large">
        <label>Zona</label>
                                    <span class="selectwrap">
                                        <select name="location" id="select-location" class="search-select">
                                          <% Offer::ZONE.each do |zona| %>
                                              <option value="<%= zona.try(:downcase) %>"><%= zona.try(:capitalize) %></option>
                                          <% end %>
                                          <option value="oricare" selected="selected">Oricare</option>
                                        </select>
                                    </span>
      </div>

      <div class="option-bar large">
        <label>Cartier</label>
                                    <span class="selectwrap">
                                        <select name="status" id="select-status" class="search-select">
                                          <% Offer::CARTIERE.each do |cartier| %>
                                              <option value="<%= cartier.try(:downcase) %>"><%= cartier.try(:capitalize) %></option>
                                          <% end %>
                                          <option value="oricare" selected="selected">Oricare</option>
                                        </select>
                                    </span>
      </div>

      <div class="option-bar large last">
        <label>Tip Operatiune</label>
                                    <span class="selectwrap">
                                        <select name="type" id="select-property-type" class="search-select">
                                          <option value="vanzare">Vanzare</option>
                                          <option value="cumparare">Cumparare</option>
                                          <option value="oricare" selected="selected">Oricare</option>
                                        </select>
                                    </span>
      </div>

      <div class="option-bar small">
        <label>Tip Oferta</label>
                                    <span class="selectwrap">
                                        <select name="bedrooms" id="select-bedrooms" class="search-select">
                                          <% Offer.tipuri_oferta.each do |tip_oferta| %>
                                              <option value="<%= tip_oferta.try(:downcase) %>"><%= tip_oferta.try(:capitalize) %></option>
                                          <% end %>
                                          <option value="oricare" selected="selected">Oricare</option>
                                        </select>
                                    </span>
      </div>

      <div class="option-bar small">
        <label>Numar camere</label>
                                    <span class="selectwrap">
                                        <select name="bathrooms" id="select-bathrooms" class="search-select">
                                          <option value="1">1</option>
                                          <option value="2">2</option>
                                          <option value="3">3</option>
                                          <option value="4">4</option>
                                          <option value="5">5+</option>
                                          <option value="oricat" selected="selected">Oricat</option>
                                        </select>
                                    </span>
      </div>

      <div class="option-bar small second-last">
        <label>Pret Minim(€)</label>
                                    <span class="inputwrap">
                                        <%= text_field_tag 'min-price', 'Oricat', :class => "search-input" %>
                                    </span>
      </div>

      <div class="option-bar small last">
        <label>Pret Maxim(€)</label>
                                    <span class="inputwrap">
                                        <%= text_field_tag 'max-price', 'Oricat', :class => "search-input" %>
                                    </span>
      </div>

      <input type="submit" value="Cauta" class=" real-btn btn">
    </form>
  </div>
</section><!-- End .advance-search -->
